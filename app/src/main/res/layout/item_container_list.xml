<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/shared_list_item_container_padding"
    android:paddingTop="@dimen/shared_list_item_container_padding"
    android:paddingLeft="@dimen/shared_list_item_container_padding_left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/shared_list_item_container_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_chevron_right_grey600_36dp" />
